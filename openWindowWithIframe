<script>
window.addEventListener('message', function(event) {
	if(!/bionut\.github/i.test(event.origin)) return;
  log('Sent a message to ' + event.origin + ' and got the following in response:');
  log('<em>' + event.data + '</em>');
});
var other = window.open('https://bionut.github.io/iframeOther.html');
console.log('Opened window:', window)
setTimeout( function() {
  other.postMessage('Hi! this is a message from index.html.', '*');
}, 2000)

function log(message) {
  document.getElementById('data').innerHTML += message + '<br /><br />';
}
</script>
